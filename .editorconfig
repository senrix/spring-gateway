[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = false
indent_style = space
indent_size = 2

[*.properties]
indent_style = space
indent_size = 4

[.editorconfig]
indent_style = space
indent_size = 4

[{*.gy, *.groovy, *.gant, *.gradle, *.gdsl}]
indent_style = space
indent_size = 4

[{*.kts, *.kt}]
indent_style = space
indent_size = 4

[{*.yml, *.yaml}]
indent_style = space
indent_size = 2

